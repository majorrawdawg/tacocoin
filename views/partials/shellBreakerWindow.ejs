<div class="window-shellbreaker" id="shell-breaker-window" style="display: none; position: fixed; z-index: 10;">
  <div class="title-bar">
    <div class="title-bar-text">Shell Breaker</div>
    <div class="title-bar-controls">
      <button aria-label="Minimize" onclick="minimizeWindow('shell-breaker-window');"><i class="fas fa-minus"></i></button>
      <button aria-label="Maximize" onclick="maximizeWindow('shell-breaker-window');"><i class="fas fa-expand"></i></button>
      <button style="font-weight: bold;" aria-label="Close" onclick="closeWindow('shell-breaker-window');">X</button>
    </div>
  </div>
  <div class="window-body">
    <div id="game-container" style="width: 100%; height: 100%;"></div>
    <button id="reset-button" style="position: absolute; bottom: 10px; right: 10px;">Reset</button>
  </div>
</div>
